<%= content_for(:head) do %>
    <% title = "#{@item.title} - Monolist" %>
    <% description = "「#{@item.title}」に関する情報です。この商品を欲しい人、持っている人を表示しています。" %>
    <title><%= title %></title>
    <meta name="description" content="<%= description %>" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:description" content="<%= description %>" />
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% image_url = @item.large_image ||= "no-image.png"%>
          <%= image_tag(image_url , alt: @item.title) %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @item.have_users.each do |user| %>
            <%= link_to(gravatar_for(user, size: 24), user_path(user), title: user.name) %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @item.want_users.each do |user| %>
            <%= link_to(gravatar_for(user, size: 24), user_path(user), title: user.name) %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", 
          {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>